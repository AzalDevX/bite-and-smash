<nav class="text-2xl sm:text-4xl lg:text-6xl xl:text-8xl font-bold text-yellow-300 mt-16 sm:mt-24 lg:mt-32">
  <ul class="space-y-8 sm:space-y-12 lg:space-y-16">
    <li class="nav-item">
      <a href="/" class="nav-link relative overflow-hidden group">
        <span class="nav-text">Inicio</span>
        <span class="nav-line"></span>
      </a>
    </li>
    <li class="nav-item">
      <a href="/#quienes-somos" class="nav-link relative overflow-hidden group">
        <span class="nav-text">Quienes Somos</span>
        <span class="nav-line"></span>
      </a>
    </li>
    <li class="nav-item">
      <a href="/carta" class="nav-link relative overflow-hidden group">
        <span class="nav-text">Carta</span>
        <span class="nav-line"></span>
      </a>
    </li>
    <li class="nav-item">
      <a href="/menu" class="nav-link relative overflow-hidden group">
        <span class="nav-text">Menu</span>
        <span class="nav-line"></span>
      </a>
    </li>
  </ul>
</nav>

<script>
  function closeMenu() {
    const event = new CustomEvent('closeMenu');
    window.dispatchEvent(event);
  }

  document.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      closeMenu();
      setTimeout(() => {
        window.location.href = link.getAttribute('href');
      }, 300); // Delay to allow menu closing animation
    });
  });
</script>

<style>
  .nav-item {
    perspective: 1000px;
  }

  .nav-link {
    transition: transform 0.3s ease;
  }

  .nav-text {
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .nav-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: currentColor;
    transform: scaleX(0);
    transition: transform 0.3s ease;
    transform-origin: right;
  }

  .nav-link:hover .nav-text {
    transform: translateY(-8px);
    color: #fff;
  }

  .nav-link:hover .nav-line {
    transform: scaleX(1);
    transform-origin: left;
  }

  .nav-link:hover {
    transform: rotateX(10deg);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .nav-item {
    animation: float 5s ease-in-out infinite;
  }

  .nav-item:nth-child(2) {
    animation-delay: 0.2s;
  }

  .nav-item:nth-child(3) {
    animation-delay: 0.4s;
  }

  @media (max-width: 640px) {
    .nav-link:hover .nav-text {
      transform: translateY(-4px);
    }

    .nav-link:hover {
      transform: rotateX(5deg);
    }
  }
</style>