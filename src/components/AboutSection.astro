</section>

<style>
  .gradient-text {
    background: linear-gradient(to bottom, #facc15 50%, #000000 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .fade-edges {
    mask-image: 
      linear-gradient(to right, transparent, black 10%, black 90%, transparent),
      linear-gradient(to bottom, transparent, black 10%, black 90%, transparent);
    mask-size: 100% 100%;
    mask-repeat: no-repeat;
    mask-position: center;
  }

  /* Add this new CSS for mobile active state */
  @media (max-width: 639px) {
    .mobile-active .bg-gradient-to-b {
      opacity: 1;
    }
    .mobile-active .group-hover\:opacity-100 {
      opacity: 1;
    }
  }
</style>

<script>
  const animateOnScroll = (entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('opacity-100', 'translate-y-0', 'translate-x-0');
        observer.unobserve(entry.target);
      }
    });
  };

  const observer = new IntersectionObserver(animateOnScroll, {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  });

  document.querySelectorAll('[data-animate]').forEach(el => observer.observe(el));

  // Add this new code for mobile click handling
  const quienesSomosSection = document.querySelector('#quienes-somos .group');
  const hoverText = document.querySelector('#quienes-somos .animate-bounce span');

  if (quienesSomosSection && hoverText) {
    quienesSomosSection.addEventListener('click', () => {
      if (window.innerWidth < 640) { // sm breakpoint in Tailwind
        quienesSomosSection.classList.toggle('mobile-active');
        hoverText.textContent = quienesSomosSection.classList.contains('mobile-active') ? 'TOCAR PARA CERRAR' : 'TOCAR ENCIMA';
      }
    });
  }
</script>