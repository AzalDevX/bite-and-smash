---
// src/components/MenuToggle.astro
---
<div>
    <img src="/favicon.svg" class="w-8 h-8" alt="">
    <button id="menuToggle" class="fixed top-4 left-4 z-50 text-yellow-400 focus:outline-none w-8 h-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path id="hamburger" stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            <path id="close" stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" class="hidden" />
        </svg>
    </button>
</div>
    
  <style>
    #menuToggle svg {
      transition: transform 0.3s ease-in-out;
    }
  
    #menuToggle.open svg {
      transform: rotate(180deg);
    }
  </style>